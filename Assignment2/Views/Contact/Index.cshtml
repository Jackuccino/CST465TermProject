@model Person

@{
    ViewData["Title"] = "Index";
}

<h2>Contact</h2>

@using (Html.BeginForm("Index", "Contact"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name, "Name", new { @class = "control-label" })
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", id="TextBox" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.PhoneNumber, "Phone Number", new { @class = "control-label" })
        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", id = "TextBox" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, "Email", new { @class = "control-label" })
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", id = "TextBox" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Message, "Message", new { @class = "control-label" })
        @Html.TextAreaFor(m => m.Message, new { @class = "form-control", id = "TextArea" })
    </div>
    <button type="submit">Send</button>
}